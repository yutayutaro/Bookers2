<div class= "container">
 <div class= "row">
  <div class= "col-md-3">
 <%= render "books/list" ,{book: @book,user: @user} %>
 </div>
    <div class="col-md-8 offset-md-1">
 <table>
  <thead>
  <tr>
   <th>Title</th>
   <th>Body</th>
   
   </tr>
   </thead>
  <% @users.each do |user| %>
   <tbody>
     <tr>
      
    <td><%= image_tag user.get_profile_image(100, 100) %>  </td>
    <td><%= user.name  %>  </td>
    <td><%= link_to "Show", user_path(user.id) %></td>
  </tbody>
  <% end %>
</table>
</div>
</div>
</div>